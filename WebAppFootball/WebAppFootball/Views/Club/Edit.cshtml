@model Club
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form method="post" name="frm" enctype="multipart/form-data">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="row form-group">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-9">
            <input class="form-control" type="text" name="name" value="@Model.Name"/>
        </div>
    </div>
    <div class="row form-group">
        <label class="col-sm-3 col-form-label">Short Name</label>
        <div class="col-sm-9">
            <input class="form-control" type="text" name="Shortname" value="@Model.ShortName" maxlength="3" />
        </div>
    </div>
    <div class="row form-group">
        <label class="col-sm-3 col-form-label">Stadium</label>
        <div class="col-sm-9">
            <select class="form-control" name="StadiumId">
                @foreach (Stadium item in ViewBag.stadiums)
                {
                    <option value="@item.Id">@item.Name</option>
                    @*if (item.Id == Model.StadiumId)
            {
                <option selected="selected" value="@item.Id">@item.Name</option>
            }
            else
            {
                <option value="@item.Id">@item.Name</option>
            }*@
                }
            </select>
        </div>
    </div>
    <div class="row form-group">
        <label class="col-sm-3 col-form-label">Coach</label>
        <div class="col-sm-9">

            <select class="form-control" name="CoachId">
                @foreach (Coach item in ViewBag.coachs)
                {
                    <option value="@item.Id">@item.FullName</option>
                    @*if (item.Id == Model.CoachId)
                    {
                        <option selected="selected" value="@item.Id">@item.FullName</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.FullName</option>
                    }*@
                }
            </select>
        </div>
    </div>
    <div class="row form-group">
        @*hidden => Giu lai gia tri cu cua @Model.LogoUrl.*@
        <input type="hidden" name="logoUrl" value="@Model.LogoUrl" />
        <label class="col-sm-3 col-form-label">Logo</label>
        <div class="col-sm-9">
            <input class="form-control" type="file" name="f" />
        </div>
    </div>
    <div class="form-group">
        <div class="offset-sm-3">
            <button class="btn btn-info">Save</button>
        </div>
    </div>
</form>

<script type="text/javascript">
    $(frm["CoachId"]).val(@Model.CoachId);
    $(frm["StadiumId"]).val(@Model.StadiumId);
</script>
